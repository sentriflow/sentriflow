{
  "name": "sentriflow",
  "private": true,
  "type": "module",
  "version": "0.3.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:cli": "cd packages/cli && bun run build && cd ../.. && bun build packages/cli/dist/index.js --compile --env=disable --outfile sentriflow.exe",
    "type-check": "tsc --noEmit && npm run type-check -w @sentriflow/docs",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "version": "node scripts/bump-version.mjs",
    "version:vscode": "node scripts/bump-version.mjs --vscode"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.50.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
